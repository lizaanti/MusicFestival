<Page x:Class="MusicFestival.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicFestival"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="#FFFFA2DD">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="194,170,0,0" VerticalAlignment="Top" Height="43" Width="104" FontSize="20" FontFamily="Franklin Gothic Heavy"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="194,252,0,0" VerticalAlignment="Top" Height="48" Width="107" FontSize="20" FontFamily="Franklin Gothic Heavy"/>
        <TextBox x:Name="LoginTB" HorizontalAlignment="Center" Margin="0,167,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184" Height="46"/>
        <PasswordBox x:Name="PassTB" HorizontalAlignment="Center" VerticalAlignment="Top" Width="184" Height="46" Margin="0,254,0,0"/>
        <Button x:Name="logBtn" Content="Войти" HorizontalAlignment="Center" Margin="0,329,0,0" VerticalAlignment="Top" Height="40" Width="144" Background="#FFB5739D" Click="logBtn_Click" FontSize="24" FontFamily="Franklin Gothic Heavy"/>
    </Grid>
</Page>

<Page x:Class="MusicFestival.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicFestival"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="#FFFFA2DD">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="254,165,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginTB" HorizontalAlignment="Center" Margin="0,169,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <PasswordBox x:Name="PassTB" HorizontalAlignment="Center" Margin="0,204,0,0" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="logBtn" Content="Войти" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Height="26" Width="71" Background="#FFB5739D" Click="logBtn_Click"/>
    </Grid>
</Page>
